.order-num,
.logistics{
	border-top: 1px solid #F7F7F7;
	border-bottom: 10px solid #F7F7F7;
	padding: 15px;
}
.order-num .num{
	display: block;
	font-size: 16px;
}
.order-num .city{
	margin-top: 20px;
	display: flex;
}
.order-num .city .status{
	width: 60px;
	margin: 0 10px;
	position: relative;
}
.order-num .city .status image{
	width: 100%;
	vertical-align: middle;
}
.order-num .city .status text{
	font-size: 10px;
	position: absolute;
	width: 100%;
	top: -8px;
	text-align: center;
	color: #999999;
}

.logistics .title{
	display: block;
	font-size: 16px;
	margin-bottom: 15px;
}
.logistics .item-list{
	position: relative;
	display: flex;
}
.logistics .item-list .status{
	width: 60px;
	color: #999999;
	margin-right: 8px;
	display: block;
}
.logistics .item-list .info{
	width: calc(100% - 68px);
	width: -webkit-calc(100% - 68px);
	display: flex;
}
.logistics .item-list image{
	width: 12px;
	height: 66px;
	margin-right: 10px;
}
.logistics .item-list .info > view{
	width: calc(100% - 22px);
	color: #999999;
	line-height: 18px;
}
.logistics .item-list .info .time{
	display: block;
	font-size: 12px;
	margin-top: 5px;
}
.user-info{
	margin: 15px;
	border-bottom: 1px solid #F5F5F5;
}
.user-info .user{
	display: flex;
	align-items: center;
	font-size: 16px;
}
.user-info .user .iconfont{
	font-size: 22px;
	margin-top: 1px;
}
.user-info .user .iconfont.icon-shou{
	color: #EF9A42;
}
.user-info .user .name{
	padding: 0 8px;
}
.user-info .address{
	margin-left: 28px;
	color: #999999;
	margin-bottom: 15px;
}
.detail-con{
	display: flex;
	padding: 0 15px;
}
.detail-list{
	width: 50%;
}
.label{
	display: flex;
	align-items: flex-start;
	margin-bottom: 8px;
	line-height: 20px;
}
.label .s-t{
	width: 60px;
	display: block;
	color: #666666;
	font-size: 12px;
}
.label .txt{
	width: calc(100% - 60px);
	word-wrap: break-word;
	font-size: 12px;
}
.label .txt.copy{
	display: flex;
	align-items: center;
}
.label .icon--right-jian{
	color: #999999;
	font-size: 12px;
	margin-left: 5px;
}
.label .orange{
	color: #fd9523;
}
.market{
	text-decoration: line-through;
	color: #999999;
	display: block;
}
.order-info{
	margin-bottom: 80px;
	margin: 0 15px 80px;
}
.signing-pictures{
	font-size: 12px;
	color: #4285F4;
	display: flex;
	align-items: center;
}
.signing-pictures .iconfont{
	padding-right: 3px;
}
.footer{
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	background-color: #FFFFFF;
	border-top: 1px solid #F5F5F5;
}
.footer button{
	display: inline-block;
	background-color: #FFFFFF;
	border: 1px solid #4285F4;
	color: #4285F4;
	border-radius: 30px;
	padding: 0 15px;
	height: 35px;
	line-height: 33px;
	margin: 10px 15px 10px 0;
	float: right;
}
.footer button .iconfont{
	padding-right: 5px;
}
.scroll-wrapper{
	max-height: 300px;
	overflow-y: auto;
}
.none{
	color: #999999;
}