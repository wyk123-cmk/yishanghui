.page-bg {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	overflow-y: auto;
	background-color: #f7f7f7;
}
*{
	font-family: "Helvetica Neue", Helvetica, sans-serif;
}
view,
button,
input,
textarea{
	color: #333;
	font-size: 14px;
}
button::after{
	border: 0;
}
uni-toast .uni-toast{
	width: 5em;
}
uni-toast .uni-toast__content{
	font-size: 14px;
}
h2{
	font-size: 14px;
}
a{
	text-decoration: none;
}
p {
    font-size: 14px;
    line-height: 22px;
	padding-bottom: 6px;
}
.tkbt{
    font-size: 16px;
    display: block;
	margin-bottom: 5px;
    text-align: center;
    color: #000000;
    font-weight: bold;
}
.fuwutiaok-hz {
    color: #FF003A;
    font-weight: bold;
}
.fuwutiaok-hzxhx{
	color: #FF0000;
}
.fuwutiaok-hzxhx,
.fuwutiaok-hczxhx{
    text-decoration: underline;
    font-weight: bold;
	font-size: 14px;
}

/* #ifdef H5 */
uni-page-head .uni-page-head__title{
	font-size: 14px !important;
	font-weight: normal;
}
.checkbox-radio uni-checkbox .uni-checkbox-input{
	border-radius: 50%;
}
uni-checkbox .uni-checkbox-input{
	transform: scale(0.6);
}
uni-checkbox:not([disabled]) .uni-checkbox-input:hover{
	border-color: #d1d1d1;
}
uni-checkbox .uni-checkbox-input.uni-checkbox-input-checked{
	color: #FFFFFF !important;
	background-color: #4285f4;
	border-color: #4285f4 !important;
}
uni-checkbox.orange .uni-checkbox-input.uni-checkbox-input-checked{
	color: #FFFFFF !important;
	background-color: #FD9523;
	border-color: #FD9523 !important;
}
uni-switch .uni-switch-input{
	height: 24px;
}
uni-switch .uni-switch-input:after, 
uni-switch .uni-switch-input:before{
	height: 22px;
}
.uni-textarea-compute, .uni-textarea-line, .uni-textarea-placeholder, .uni-textarea-textarea{
	position: inherit;
}
/* #endif */
/* #ifdef MP-WEIXIN */
checkbox .wx-checkbox-input{
	transform:scale(0.6);
}
.checkbox-radio checkbox .wx-checkbox-input {
	border-radius: 50%;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
	background-color: #4285f4;
	color: #FFFFFF !important;
	border-color: #4285f4 !important;
}
checkbox.orange .wx-checkbox-input.wx-checkbox-input-checked{
	background-color: #FD9523;
	color: #FFFFFF !important;
	border-color: #FD9523 !important;
}
switch .wx-switch-input{
	height: 24px;
}
switch .wx-switch-input:after, 
switch .wx-switch-input:before{
	height: 22px;
}
/* #endif */

.navigator-hover{
	background-color: transparent;
	opacity: 1;
}

.transport-o{
	display: flex;
	display: -webkit-flex;
	justify-content: center;
	padding: 18px 0;
}
.transport-o text{
	display: block;
}
.transport-o .status,
.transport-o .express{
	width: 33%;
	text-align: center;
}
.transport-o .express{
	font-size: 16px;
}
.transport-o .express .city{
	font-size: 14px;
	color: #666;
	padding-bottom: 5px;
}
.transport-o .status{
	font-size: 12px;
	color: #999999;
}
.transport-o .status image{
	width: 90px;
	height: 4px;
	padding-bottom: 5px;
}
.none-data-list{
	text-align: center;
	color: #999;
	margin-top: 30%;
}
.none-data-list image{
	display: block;
	margin: 0 auto 5px;
	width: 75px;
	height: 76px;
}

/* button样式 */
.btn-default-css,
.btn-fixed-bottom{
	background-color: #4285F4;
	color: #fff;
}
.btn-default-css{
	height: 40px;
	line-height: 40px;
	margin: 20px 15px;
}
.btn-fixed-bottom{
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	height: 46px;
	line-height: 46px;
	border-radius: 0;
}
/*右上角*/
.head-right{
	position: fixed;
	z-index: 998;
}
/* #ifdef H5 */
.head-right{
	top: 0;
	right: 15px;
	line-height: 44px;
}
/* #endif */
/* #ifdef MP-WEIXIN */
.head-right{
	top: 10px;
	right: 0;
	color: #fff;
	padding: 3px 10px;
	border-top-left-radius: 15px;
	border-bottom-left-radius: 15px;
	background-color: #4285f4;
}
.head-right.orange{
	background-color: #ff7742;
}
/* #endif */
.share-popup{
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	z-index: 1000;
	text-align: center;
}
.v-model{
	position: fixed;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	opacity: .5;
	background: #000;
	z-index: 999;
}