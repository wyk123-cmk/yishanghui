.content{
	background-color: #fff;
}
.bg{
	    background: linear-gradient(135deg,#4286f5,#0bcefe);
	    height: 180px;
	    border-bottom-left-radius: 15%;
	    border-bottom-right-radius: 15%;
	    width: 110%;
	    margin: 0 -5%;
	    overflow-x: hidden;
}
.user-box{
	    background: rgba(255,255,255,.46);
	    border-radius: 10px;
	    position: absolute;
	    top: 40px;
	    right: 14px;
	    left: 14px;
	    padding: 10px;
}
.outline{
	    border: 1px solid rgba(255,255,255,.46);
	    border-radius: 10px;
	    padding: 16px 10px;
}
.con_user{
	display: flex;
	flex-direction: column;
	padding-top: 5px;
	padding-left: 10px;
}
.user-box .user-heard{
	
	
	display: -webkit-flex;
	
}
.user-box .user-heard .pic{
	width: 60px;
	height: 60px;
	border-radius: 100%;
	overflow: hidden;
	border: 2px solid #fff;
	
}
.user-box .user-heard image{
	width: 100%;
	height: 100%;
}
.user-box .user-heard .txt{
	font-size: 16px;
	padding-bottom: 10px;
	    color: #fff;
}
.user-box .user-icon{
	display: flex;
	display: -webkit-flex;
	align-items: center;
	margin-top: 4px;
}
.leiji{
	background: #fff;
	    border-radius: 10px;
	    box-shadow: 0px 0px 5px #ccc;
	    margin-top: 14px;
	    display: flex;
	    align-items: center;
	    justify-content: space-around;
	    padding: 14px;
	    text-align: center;
}
.ljys{
	display: flex;
	flex-direction: column;
}
.ljys label{
	    font-size: 12px;
	    line-height: 20px;
	    color: #999;
}
.ljys text{
	    font-size: 16px;
	    color: #FD9523;
	    font-weight: bold;
}
.bordr_s{
	width: 1px;
	    height: 32px;
	    background: #eee;
}
.user-box .user-icon .u-i-l{
	width: 50%;
	display: flex;
	display: -webkit-flex;
	align-items: center;
	justify-content: center;
	color:#fff;
}
.user-box .user-icon .u-i-l-s{
	width: 50%;
	display: flex;
	display: -webkit-flex;
	align-items: center;
	justify-content: center;
	margin-left:30px;
}
.user-box .user-icon .u-i-l .iconfont{
	font-size: 18px;
	color: #fff;
	padding-right: 3px;
}
.user-box .user-icon .u-i-l .iconfont.icon-shoujian{
	color: #fff;
}
.icon-list{
	display: flex;
	display: -webkit-flex;
	align-items: center;
	margin-top: 50px;
	padding-bottom: 25px;
}
.icon-list .list{
	width: 25%;
	text-align: center;
}
.icon-list .list image{
	width: 25px;
	height: 25px;
	display: block;
	margin: 0 auto 5px;
}
.item-list{
	border-top: 1px solid #eee;
	padding: 15px;
	position: relative;
}
.item-list .new{
	width: 12px;
	padding-left: 2px;
}
.item-list .iconfont,
.item-list .tel{
	position: absolute;
	top: 15px;
	right: 15px;
	color: #DBDBDB;
	line-height: 20px;
}
.item-list .tel{
	font-size: 18px;
	color: #fd9523;
	font-weight: bold;
}
.exit{
	background: #fff;
	text-align: center;
	margin-top: 10px;
	line-height: 48px;
	border-radius: 0;
}