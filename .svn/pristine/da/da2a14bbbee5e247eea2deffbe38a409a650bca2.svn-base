.head-con{
	background-color: #F7F7F7;
	padding: 20px 15px;
	display: flex;
	display: -webkit-flex;
	align-items: center;
	font-size: 16px;
}
.head-con .iconfont{
	color: #6FC566;
	font-size: 35px;
	padding-right: 10px;
}
.head-con .tips{
	font-size: 12px;
	padding-left: 10px;
	color: #999;
}
.con{
	padding: 0 15px;
}
.con .small-title{
	display: block;
	padding: 25px 0;
}
.con .label-input{
	border-bottom: 1px solid #eeeeee;
	padding-bottom: 8px;
	display: flex;
	align-items: center;
	font-size: 32px;
}
.con .label-input input{
	font-size: 32px;
	line-height: 32px;
	height: 32px;
}
.all-amount{
	color: #999;
	font-size: 12px;
	padding-top: 10px;
}
.all-amount text{
	color: #333333;
}
.all-amount.right{
	text-align: right;
}
.all-amount .red{
	color: #FF0000;
	font-size: 14px;
}
.note{
	color: red;
	font-size: 12px;
	padding-top: 5px;
	display: block;
}
.con button{
	background-color: #4285F4;
	color: #FFFFFF;
	width: 150px;
	margin-top: 30px;
}
.con button.bounty{
	background: #fe6603;
	width: 100%;
	border-radius: 36px;
}