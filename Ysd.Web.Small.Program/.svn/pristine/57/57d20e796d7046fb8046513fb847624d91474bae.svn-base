.content{
	background-color: #fff;
}
.bg{
	width: 100%;
	height: 146px;
	background: linear-gradient(135deg, #4286f5, #0bcefe);
	border-bottom-left-radius: 100%;
	border-bottom-right-radius: 100%;
}
.user-box{
	position: absolute;
	top: 60px;
	left: 15px;
	right: 15px;
	background: #fff;
	border-radius: 4px;
	box-shadow: 0px 2px 5px #f1f6fe;
	padding: 0 25px;
	height: 110px;
}
.user-box .user-heard{
	margin-top: -16px;
	display: flex;
	display: -webkit-flex;
	align-items: flex-end;
}
.user-box .user-heard .pic{
	width: 60px;
	height: 60px;
	border-radius: 100%;
	overflow: hidden;
}
.user-box .user-heard image{
	width: 100%;
	height: 100%;
}
.user-box .user-heard .txt{
	font-size: 16px;
	padding-left: 10px;
	padding-bottom: 10px;
}
.user-box .user-icon{
	display: flex;
	display: -webkit-flex;
	align-items: center;
	margin-top: 20px;
}
.user-box .user-icon .u-i-l{
	width: 50%;
	display: flex;
	display: -webkit-flex;
	align-items: center;
	justify-content: center;
}
.user-box .user-icon .u-i-l .iconfont{
	font-size: 20px;
	color: #fb3c45;
	padding-right: 3px;
}
.user-box .user-icon .u-i-l .iconfont.icon-shoujian{
	color: #346df2;
}
.icon-list{
	display: flex;
	display: -webkit-flex;
	align-items: center;
	margin-top: 50px;
	padding-bottom: 25px;
}
.icon-list .list{
	width: 25%;
	text-align: center;
}
.icon-list .list image{
	width: 25px;
	height: 25px;
	display: block;
	margin: 0 auto 5px;
}
.item-list{
	border-top: 1px solid #eee;
	padding: 15px;
	position: relative;
}
.item-list .new{
	width: 12px;
	padding-left: 2px;
}
.item-list .iconfont,
.item-list .tel{
	position: absolute;
	top: 15px;
	right: 15px;
	color: #DBDBDB;
	line-height: 20px;
}
.item-list .tel{
	font-size: 18px;
	color: #fd9523;
	font-weight: bold;
}
.exit{
	background: #fff;
	text-align: center;
	margin-top: 10px;
	line-height: 48px;
	border-radius: 0;
}