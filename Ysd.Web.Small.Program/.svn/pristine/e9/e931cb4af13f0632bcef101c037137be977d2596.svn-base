<template>
	<view @click="hidePopup" v-if="isActive">
		<view class="v-modal"></view>
		<view class="mint-popup">
			<image mode="widthFix" v-if="discountSF" src="../../static/images/SFsx.png"></image>
			<image mode="widthFix" v-if="!discountSF&&discountYHJ" src="../../static/images/yhq1.png"></image>
		</view>
	</view>
</template>
<script>
export default {
	name: "pageImges",
	props: {
		show: { type: Boolean, default: false },
	},
	data(){
		return {
			isActive: false,
			discountYHJ: false,
			discountSF: false
		}
	},
	created() {
		let globalData = getApp().globalData;
		this.isActive = globalData.isDiscountActive;
		this.discountYHJ = globalData.isDiscountYHJ;
		this.discountSF = globalData.isDiscountSF;
	},
	watch: {
		show() {
			this.isActive = this.show;
		}
	},
	methods: {
		hidePopup: function(){
			getApp().globalData.isDiscountActive = this.isActive = false;
			if(this.discountSF == true){
				//九折优惠
				uni.navigateTo({url: "/pages/index/expressDelivery?type=small"});
			}
			if(this.discountYHJ == true){
				//优惠券
				uni.navigateTo({url: "/pages/me/moreCoupon"});
			}
		}
	}
}
</script>
<style scoped>
.v-modal {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
	bottom: 0;
    background-color: rgba(0,0,0,0.5);
	z-index: 999;
}
.mint-popup{
	position: fixed;
	top: 50%;
	left: 0;
	right: 0;
	-webkit-transform: translate3d(0, -50%, 0);
	transform: translate3d(0, -50%, 0);
	-webkit-backface-visibility: hidden;
	backface-visibility: hidden;
	-webkit-transition: .2s ease-out;
	transition: .2s ease-out;
	z-index: 1000;
}
.mint-popup image{
	display: block;
	width: 90%;
	margin: 0 auto;
}
</style>
